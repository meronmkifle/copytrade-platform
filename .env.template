# Copy Trade Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Database
DB_PASSWORD=your_secure_db_password_here

# TradeStation API
TS_CLIENT_ID=your_tradestation_client_id
TS_CLIENT_SECRET=your_tradestation_client_secret
TS_USE_SANDBOX=true  # Set to false for live trading

# Tradovate API
TRADOVATE_DEMO=true  # Set to false for live trading

# Security
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long

# Grafana (optional)
GRAFANA_PASSWORD=admin

# Application Settings
ASPNETCORE_ENVIRONMENT=Production

# SMTP Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@copytrade.com

# Webhook URLs (optional)
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Features
ENABLE_PAPER_TRADING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOK_NOTIFICATIONS=false

# Monitoring
SENTRY_DSN=
APPLICATION_INSIGHTS_KEY=

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
